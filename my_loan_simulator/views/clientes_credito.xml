<?xml version="1.0" encoding="utf-8"?>
<odoo>    <!-- Acción para abrir clientes -->
    <record id="loan_client_action" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('customer_rank', '>', 0)]</field>
        <field name="context">{}</field>        
    </record>
    <!-- (Opcional) Vista heredada para agregar campos extra -->
    <record id="view_clientes_credito_form_inherit_custom" model="ir.ui.view">
        <field name="name">clientes.credito.form.inherit.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='sales_purchases']" position="after">
                <page string="Código interno">
                    <group>
                        <field name="custom_code" placeholder="Código interno del cliente" />
                    </group>
                </page>
            </xpath>
        </field>
    </record> 

</odoo>
