<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_loan_simulator" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.loan.simulator</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <div class="app_settings_block" data-string="Simulador de Crédito" string="Variables de Crédito" data-key="my_loan_simulator">
                        <h2>Variables de Configuración</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Tasa de Interés por Defecto</span>
                                    <field name="default_interest_rate" class="oe_inline"/>
                                    <div class="text-muted">
                                        Esta tasa se usará como valor inicial en el simulador.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="loan_variables_action" model="ir.actions.act_window">
            <field name="name">Configuración del Crédito</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_loan_variables_config" name="Configuración" parent="menu_credit_root" action="loan_variables_action" sequence="20"/>
    </data>
</odoo>